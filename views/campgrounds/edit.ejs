<% include ../partials/header %>


<div class="container">
<h1 align="center">UPDATE CAMPGROUND</h1>


	<div style="width: 40%; margin: 0 auto">
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method = "POST">
		  <div class="form-row">
			<div class="form-group col-md-6">
			  <label for="inputName">Name</label>
			  <input type="text" class="form-control" name="newcamp[name]" value="<%= campground.name %>">
			</div>
		  </div>
		  <div class="form-group">
			<label for="inputImage">Image</label>
			<input type="text" class="form-control" name="newcamp[image]" value="<%= campground.image %>">
		  </div>
			<div class="form-group">
			<label for="inputImage">Price</label>
			<input type="number" class="form-control" name="newcamp[price]" val="<%= campground.price %>" min="0.01" step="0.01">
		  </div>
			<div class= "form-group">
				<label for="inputDescription">Description</label>
				<input class="form-control" type="text" name="newcamp[description]" value="<%= campground.description %>">
			</div>
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
	
	
</div>