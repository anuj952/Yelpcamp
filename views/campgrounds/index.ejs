<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
	<div class="container">
		<h1>WELCOME TO YELPCAMP</h1>
		<p>choose any campground you like !!!!</p>
		<p>
			<a class="btn btn-primary" href="/campgrounds/new" role="button">Add new campground</a>
		</p>
	</div>
</header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<%camp.forEach(function(x){%>
		<div class="col-md-4">
			<div class="img-thumbnail">
				<img src="<%=x.image%>" style="width:100%;height:300px;">
				<div class="caption">
					<h4><%= x.name %></h4>
				</div>	
				<p>
					<a href="/campgrounds/<%= x._id %>" class =" btn btn-primary">MORE INFO</a>
				</p>
			</div>
		</div>
		<%});%>
	</div>
</div>	
	
	<% include ../partials/footer %>