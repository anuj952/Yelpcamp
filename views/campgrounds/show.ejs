<% include ../partials/header %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelpcamp</p>
			<div class="list-group">
				<li class="list-group-item">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="img-thumbnail">
				<img class="img-responsive" src ="<%= camp.image %>" width="100%">
				<div class="caption-full">
					<h4 class="float-right"><%= camp.price %> rupees/day</h4>
					<h4><a><%= camp.name %></a></h4>
					<p><%= camp.description %></p>
					<p><em>Submitted By <%= camp.author.username %></em></p>
					<% if(currentUser && camp.author.id.equals(currentUser._id)){ %>
					<a class ="btn btn-sm btn-warning" href="/campgrounds/<%= camp._id %>/edit">UPDATE</a>
					<form id="delete-form" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
						<button class="btn btn-sm btn-danger">DELETE</button>			
					</form>
					<% } %>
				</div>
			</div>
			<div class="card bg-light mb-3">
				  <div class="card-body">
					<div class="text-right">
					<a class="btn btn-success" href = "/campgrounds/<%= camp._id %>/comments/new">Comment</a>
				</div>
					  <hr>
				<% camp.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="float-right">10 days ago</span>
						<p>
		 					<%= comment.text %>
   						</p>
						<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
						<a class="btn btn-sm btn-warning" href="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>/edit">EDIT</a>
						<form id="delete-comment" action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
						<button class="btn btn-sm btn-danger">DELETE</button>
							<% } %>
					</form>
					</div>
				</div>
					  <hr>
						<% }) %>
				  </div>
		   </div>
		</div>
	</div>
</div>

