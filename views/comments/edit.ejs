
<% include ../partials/header %>


<div class="container">
	<h1 align="center">Edit Comment</h1>


	<div style="width: 40%; margin: 0 auto">
		<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method = "POST">
		  <div class="form-row">
			<div class="form-group col-md-6">
			  <label for="inputName">Comment</label>
			  <input type="text" class="form-control" id="inputText" value="<%= comment.text %>" name="comment[text]">
			</div>
		  </div>
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
	
	
</div>
